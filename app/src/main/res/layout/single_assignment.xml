<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/feed_background"
    android:padding="10dp">

    <TextView
        android:id="@+id/department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:background="@drawable/classbg"
        android:textColor="#d31717"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/department"
        android:layout_toEndOf="@+id/department"
        android:padding="10dp"
        android:textSize="22sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/dateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/assignmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/department"
        android:layout_below="@+id/department"
        android:padding="15dp"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lastDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/department"
        android:layout_below="@+id/assignmentText"
        android:padding="15dp"
        android:textColor="#7315d1"
        android:textSize="19sp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/feed_background"
    android:padding="10dp"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/userCircle"
        android:layout_width="71dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_account_circle_black_24dp" />

    <TextView
        android:id="@+id/teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userCircle"
        android:layout_toEndOf="@+id/userCircle"
        android:padding="10dp"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userCircle"
        android:layout_below="@+id/userCircle"
        android:padding="10dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/dateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/assignmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userCircle"
        android:layout_below="@+id/title"
        android:padding="15dp"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/lastDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/userCircle"
        android:layout_below="@+id/assignmentText"
        android:padding="15dp"
        android:textColor="#7315d1"
        android:textSize="19sp" />
</RelativeLayout>
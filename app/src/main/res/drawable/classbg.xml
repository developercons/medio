<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <stroke android:width="1dip" android:color="#15181d" />
            <gradient android:angle="-90" android:startColor="#a7a7a7" android:endColor="#a2f98d"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#cf1729" />
            <solid android:color="#defbff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <stroke android:width="2dip" android:color="#cf1729" />
            <gradient android:angle="-90" android:startColor="#e4e4e4" android:endColor="#d5e7e9" />
        </shape>
    </item>
</selector>
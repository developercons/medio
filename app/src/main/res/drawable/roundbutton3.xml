<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#050a0a" />
            <gradient android:angle="-90" android:startColor="#ab2660" android:endColor="#f02e7b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#c6166e" />
            <solid android:color="#912053"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="15dp" />
            <stroke android:width="1dip" android:color="#f03381" />
            <gradient android:angle="-90" android:startColor="#de327c" android:endColor="#97134e" />
        </shape>
    </item>
</selector>
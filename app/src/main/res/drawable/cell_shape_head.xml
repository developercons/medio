<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="2dip" android:color="#161610" />
            <gradient android:angle="-90" android:startColor="#a7a5a2" android:endColor="#ebe9e8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#ebe9e8" />
            <solid android:color="#706f6e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="1dip" />
            <stroke android:width="1dip" android:color="#191910" />
            <gradient android:angle="-90" android:startColor="#ebe9e8" android:endColor="#a7a5a2" />
        </shape>
    </item>
</selector>
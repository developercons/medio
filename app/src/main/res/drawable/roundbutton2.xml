<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#15181d" />
            <gradient android:angle="-90" android:startColor="#3153a1" android:endColor="#4d7ef2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#15181d" />
            <solid android:color="#3153a1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="30dip" />
            <stroke android:width="1dip" android:color="#15181d" />
            <gradient android:angle="-90" android:startColor="#4d7ef2" android:endColor="#3153a1" />
        </shape>
    </item>
</selector>